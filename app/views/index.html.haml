.container
  .row
    .table-responsive
      %h3.text-center Employees
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr.bg-success
            %th Name
            %th User Name
            %th Active Loved One
            %th{:colspan => "3"} Actions
        %tbody
          - @employees.each do |employee|
            %tr
              %td= employee.name
              %td= employee.username
              %td= employee.lovedones.first.first_name if  employee.lovedones && employee.lovedones.count>0
              %td= link_to 'Edit', edit_company_employee_path(employee.company, employee)
              %td= link_to 'Destroy', company_employee_path(employee.company, employee), :method=>:delete, data: { confirm: 'Are you sure?' }
      %br/
      = link_to 'New Employee', new_company_employee_path+"?nohead=#{params[:nohead]}" , class: "btn btn-success  btn-md"