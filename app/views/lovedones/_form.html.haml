:javascript
  $(function(){
    $('#lovedone_state').change(function(){
      var text = $('option:selected', this).text();
      $('#lovedone_county').empty();
      if(states[text]){
        var html = "";
        states[text].map(function(o){
          html += "<option>"+o+"</option>";
        });
        $('#lovedone_county').append(html);
      }
    });
    $('#lovedone_state').trigger('change');
  });
