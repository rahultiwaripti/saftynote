%h3=@title
%table{:border => "1", :cellpadding => "10", :cellspacing => "0", :style => "border-collapse: collapse;"}
	%tr
		%th{:style => "text-align: left;"} From
		%td{:style => "width: 120px;"}= @start_date.strftime("%m/%d/%Y %H:%S")
	%tr
		%th{:style => "text-align: left;"} To
		%td{:style => "width: 120px;"}= @end_date.strftime("%m/%d/%Y %H:%S")
	%tr
		%th{:style => "text-align: left;"} Messages sent
		%td{:style => "width: 120px;"}= @message_count
	%tr
		%th{:style => "text-align: left;"} Amount
		%td{:style => "width: 120px;"}= @amount

%br/
%br/
%br/
%br/

